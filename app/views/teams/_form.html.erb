<div class="mb-4">
  <%= link_to "← Equipes", teams_path, class: "text-gray-600 hover:text-gray-900 text-sm" %>
</div>

<%= form_with(model: team, class: "space-y-6") do |form| %>
  <div class="bg-white shadow-lg rounded-xl border border-gray-200">
    <header class="flex items-center justify-between p-6 border-b border-gray-200">
      <h1 class="text-2xl font-bold tracking-tight text-gray-900">
        <%= team.new_record? ? "Nova Equipe" : "Editar Equipe" %>
      </h1>
      <% if team.persisted? %>
        <%= link_to "Excluir", team_path(team), 
              class: "text-sm font-medium text-red-600 hover:text-red-800",
              data: { 
                controller: "confirm", 
                action: "click->confirm#confirm", 
                confirm_message: "Tem certeza que deseja excluir a equipe #{team.nome}?", 
                turbo_method: "delete" 
              } %>
      <% end %>
    </header>

    <div class="p-6 space-y-6">
      <% if team.errors.any? %>
        <div class="rounded-md bg-red-50 p-4 mb-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94l-1.72-1.72z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800"><%= pluralize(team.errors.count, "erro") %> impediram que esta equipe fosse salva:</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul role="list" class="list-disc space-y-1 pl-5">
                  <% team.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :nome, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :nome, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2" %>
      </div>

      <div>
        <p class="block text-sm font-medium text-gray-700 mb-1">Operadores Vinculados:</p>
        <% if team.operators.any? %>
          <div class="mt-1 space-y-2 rounded-md border border-gray-200 p-4">
            <% team.operators.each do |operator| %>
              <p class="text-gray-900 text-sm"><%= operator.nome %> <span class="text-gray-500 text-xs">(<%= operator.funcao %>)</span></p>
            <% end %>
          </div>
        <% else %>
          <p class="mt-1 text-gray-500 text-sm">Nenhum operador vinculado a esta equipe.</p>
        <% end %>
      </div>
    </div>

    <div class="flex justify-end gap-4 p-6 bg-gray-50 border-t border-gray-200">
      <%= link_to "Cancelar", teams_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= form.submit "Salvar Equipe", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
    </div>
  </div>
<% end %>

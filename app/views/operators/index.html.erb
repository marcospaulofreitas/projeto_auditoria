<div class="p-4 sm:p-6 lg:p-8">
  <header class="flex items-center justify-between mb-6">
    <%= link_to "← Dashboard", quality_cases_path, class: "text-gray-600 hover:text-gray-900 text-sm" %>
    <%= link_to new_operator_path, class: "flex items-center justify-center w-10 h-10 bg-indigo-600 text-white rounded-full hover:bg-indigo-700 transition-colors shadow-md" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
    <% end %>
  </header>

  <div class="bg-white shadow-lg rounded-xl border border-gray-200">
    <header class="p-6 border-b border-gray-200">
      <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold tracking-tight text-gray-900">Operadores</h1>
        <% if params[:nome].present? || params[:equipe].present? || params[:funcao].present? %>
          <%= link_to "Limpar filtros", operators_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
        <% end %>
      </div>
      
      <!-- Filtros -->
      <%= form_with url: operators_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
        <div class="flex gap-2 items-end">
          <div>
            <%= form.label :nome, "Nome", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :nome, value: params[:nome], placeholder: "Buscar por nome...", 
                               class: "border border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-1 focus:ring-gray-500 focus:border-gray-500" %>
          </div>
          <div>
            <%= form.submit "Filtrar", class: "px-4 py-2 bg-gray-900 text-white rounded-md text-sm hover:bg-gray-800 transition-colors" %>
          </div>
        </div>
        <div>
          <%= form.label :equipe, "Equipe", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :equipe, options_for_select([["Todas as Equipes", ""]] + Team.all.pluck(:nome, :nome), params[:equipe]), 
                         {}, { class: "border border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-1 focus:ring-gray-500 focus:border-gray-500", onchange: "this.form.submit();" } %>
        </div>
        <div>
          <%= form.label :funcao, "Função", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :funcao, options_for_select([["Todas as Funções", ""]] + [["Gestor", "Gestor"], ["Auditor da Qualidade", "Auditor da Qualidade"], ["Tecnico do Suporte", "Tecnico do Suporte"]], params[:funcao]), 
                         {}, { class: "border border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-1 focus:ring-gray-500 focus:border-gray-500", onchange: "this.form.submit();" } %>
        </div>
      <% end %>
    </header>

    <div class="p-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% @operators.each do |operator| %>
          <div class="bg-white rounded-lg border border-gray-200 p-4 hover:shadow-lg hover:-translate-y-px transition-all duration-200 cursor-pointer"
               data-controller="clickable-row"
               data-clickable-row-url-value="<%= edit_operator_path(operator) %>"
               data-action="click->clickable-row#visit">
            
            <h3 class="font-bold text-md text-slate-800 truncate"><%= operator.nome %></h3>

            <dl class="mt-2 text-xs text-slate-600 space-y-1">
              <div>
                <dt class="inline font-medium">Função: </dt>
                <dd class="inline"><%= operator.funcao %></dd>
              </div>
              <div>
                <dt class="inline font-medium">Equipes: </dt>
                <dd class="inline">
                  <%= operator.teams.any? ? operator.teams.map(&:nome).join(', ') : "Nenhuma" %>
                </dd>
              </div>
            </dl>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
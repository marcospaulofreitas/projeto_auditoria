<div class="bg-white rounded-lg shadow-sm border border-slate-200 p-8 max-w-4xl mx-auto">
  <div class="flex items-center gap-4 mb-8">
    <%= link_to "← Dashboard", quality_cases_path, class: "text-gray-600 hover:text-gray-900 text-sm" %>
    <h2 class="text-2xl font-bold text-slate-900">Registro de Contato</h2>
  </div>

  <!-- Informações do Caso (Readonly) -->
  <div class="bg-slate-50 border border-slate-200 rounded-md p-6 mb-6">
    <h3 class="text-lg font-medium text-slate-700 mb-4">Informações do Caso</h3>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 text-sm">
      <div>
        <span class="font-medium text-slate-600">Chamado:</span>
        <p class="text-slate-900"><%= @quality_case.numero_chamado %></p>
      </div>
      <div>
        <span class="font-medium text-slate-600">Solicitante:</span>
        <p class="text-slate-900"><%= @quality_case.cliente %></p>
      </div>
      <div>
        <span class="font-medium text-slate-600">Empresa:</span>
        <p class="text-slate-900"><%= @quality_case.empresa %></p>
      </div>
      <div>
        <span class="font-medium text-slate-600">Técnico:</span>
        <p class="text-slate-900"><%= @quality_case.tecnico %></p>
      </div>
    </div>
    <div class="mt-4">
      <span class="font-medium text-slate-600">Descrição da Reclamação:</span>
      <div class="text-slate-900 mt-1"><%= simple_format(@quality_case.insatisfacao_cliente) %></div>
    </div>
  </div>

  <!-- Timer -->
  <% if @quality_case.contato_started_at %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-6">
      <div class="flex items-center">
        <span class="text-yellow-800 font-medium">⏱ Tempo decorrido: </span>
        <span class="ml-2 text-yellow-900 font-bold" data-controller="timer" data-timer-start-time-value="<%= @quality_case.contato_started_at.to_i * 1000 %>" data-timer-limit-value="1800">
          00:00
        </span>
      </div>
    </div>
  <% end %>

  <!-- Histórico de Contatos -->
  <% if @quality_case.contacts.any? %>
    <div class="mb-6">
      <h3 class="text-lg font-medium text-slate-700 mb-4">Histórico de Contatos</h3>
      <div class="space-y-3">
        <% @quality_case.contacts.order(:created_at).each_with_index do |contact, index| %>
          <div class="bg-gray-50 border border-gray-200 rounded-md p-4">
            <div class="flex justify-between items-start mb-2">
              <span class="text-sm font-medium text-slate-700">Contato #<%= index + 1 %></span>
              <span class="text-xs text-slate-500">
                <%= contact.data_contato&.strftime("%d/%m/%Y") %> às <%= contact.hora_contato&.strftime("%H:%M") %>
              </span>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm">
              <div>
                <span class="text-slate-500">Contato com:</span>
                <p class="text-slate-700"><%= contact.contato_com %></p>
              </div>
              <div>
                <span class="text-slate-500">Registro:</span>
                <p class="text-slate-700"><%= contact.registro_contato %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Novo Contato -->
  <%= form_with model: Contact.new, local: true, url: registrar_contato_quality_case_path(@quality_case) do |form| %>
    <div class="bg-blue-50 border border-blue-200 rounded-md p-6 mb-6">
      <h3 class="text-lg font-medium text-blue-800 mb-4">Novo Contato</h3>
      
      <!-- Tipo de Contato -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-slate-700 mb-3">Tipo de Contato</label>
        <div class="flex gap-6">
          <label class="flex items-center">
            <input type="radio" name="tipo_contato" value="sucesso" id="contato_sucesso" class="mr-2" onchange="toggleButtons()">
            <span class="text-sm text-slate-700">Contato Realizado</span>
          </label>
          <label class="flex items-center">
            <input type="radio" name="tipo_contato" value="insucesso" id="contato_insucesso" class="mr-2" onchange="toggleButtons()">
            <span class="text-sm text-slate-700">Contato Insucesso</span>
          </label>
        </div>
        <!-- Campo hidden para capturar tipo de contato -->
        <input type="hidden" name="tipo_contato" id="tipo_contato_hidden" value="">
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
        <div>
          <%= form.label :data_contato, "Data do Contato", class: "block text-sm font-medium text-slate-700" %>
          <%= form.date_field :data_contato, value: Date.current, readonly: true,
                             class: "mt-1 block w-full border border-slate-300 rounded-md shadow-sm py-2 px-3 bg-gray-100 cursor-not-allowed sm:text-sm" %>
        </div>
        
        <div>
          <%= form.label :hora_contato, "Hora do Contato", class: "block text-sm font-medium text-slate-700" %>
          <%= form.time_field :hora_contato, value: Time.current.strftime("%H:%M"), readonly: true,
                             class: "mt-1 block w-full border border-slate-300 rounded-md shadow-sm py-2 px-3 bg-gray-100 cursor-not-allowed sm:text-sm" %>
        </div>
        
        <div id="contato_com_field">
          <%= form.label :contato_com, "Contato com", class: "block text-sm font-medium text-slate-700" %>
          <%= form.text_field :contato_com, placeholder: "Nome da pessoa atendida",
                             class: "mt-1 block w-full border border-slate-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-amber-500 focus:border-amber-500 sm:text-sm" %>
        </div>
      </div>
      
      <div class="mb-6" id="registro_field">
        <%= form.label :registro_contato, "Registro do Contato", class: "block text-sm font-medium text-slate-700" %>
        <%= form.text_area :registro_contato, rows: 4, placeholder: "Descreva o que foi tratado no contato...",
                          class: "mt-1 block w-full border border-slate-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-amber-500 focus:border-amber-500 sm:text-sm" %>
      </div>
    </div>

    <!-- Botões -->
    <div class="flex justify-end gap-3 mt-6">
      <%= link_to "Cancelar", quality_cases_path, 
                 class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      
      <!-- Botão para Contato Realizado -->
      <%= form.submit "Enviar para Análise", 
                     id: "btn_sucesso",
                     name: "commit", value: "Enviar para Análise",
                     style: "display: none;",
                     class: "px-6 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700" %>
      
      <!-- Botão para Contato Insucesso -->
      <%= form.submit "Salvar Insucesso", 
                     id: "btn_insucesso",
                     name: "commit", value: "Salvar Insucesso",
                     style: "display: none;",
                     class: "px-6 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" %>
    </div>
  <% end %>
</div>

<script>
// Controlar botões baseado no tipo de contato
function toggleButtons() {
  const sucessoRadio = document.getElementById('contato_sucesso');
  const insucessoRadio = document.getElementById('contato_insucesso');
  const btnSucesso = document.getElementById('btn_sucesso');
  const btnInsucesso = document.getElementById('btn_insucesso');
  const tipoContatoHidden = document.getElementById('tipo_contato_hidden');
  const insucessosAtuais = <%= @quality_case.contatos_insucesso %>;
  
  if (sucessoRadio.checked) {
    tipoContatoHidden.value = 'sucesso';
    btnSucesso.style.display = 'inline-block';
    btnInsucesso.style.display = 'none';
  } else if (insucessoRadio.checked) {
    tipoContatoHidden.value = 'insucesso';
    // Se já tem 2 insucessos, na 3ª tentativa mostra "Enviar para Análise"
    if (insucessosAtuais >= 2) {
      btnSucesso.style.display = 'inline-block';
      btnInsucesso.style.display = 'none';
    } else {
      btnSucesso.style.display = 'none';
      btnInsucesso.style.display = 'inline-block';
    }
  } else {
    tipoContatoHidden.value = '';
    btnSucesso.style.display = 'none';
    btnInsucesso.style.display = 'none';
  }
}
</script>
<div class="bg-white rounded-lg shadow-sm border border-slate-200 p-8 max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h2 class="text-2xl font-bold text-slate-900">Qualidade Pós-Recusa</h2>
    <%= link_to "Voltar", quality_cases_path, 
               class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>

  <!-- Motivo da Recusa -->
  <div class="bg-red-50 border border-red-200 rounded-md p-6 mb-6">
    <h3 class="text-lg font-medium text-red-800 mb-4">Motivo da Recusa pela Gestão</h3>
    <p class="text-red-900 bg-white p-4 rounded border"><%= @quality_case.motivo_recusa %></p>
  </div>

  <!-- Análise Original (Readonly) -->
  <div class="bg-slate-50 border border-slate-200 rounded-md p-6 mb-6">
    <h3 class="text-lg font-medium text-slate-700 mb-4">Análise Original</h3>
    
    <div class="space-y-3 text-sm">
      <% if @quality_case.analise_atendimento.present? %>
        <div>
          <span class="font-medium text-slate-600">Atendimento:</span>
          <p class="text-slate-900"><%= @quality_case.analise_atendimento %></p>
        </div>
      <% end %>
      
      <% if @quality_case.analise_conhecimento.present? %>
        <div>
          <span class="font-medium text-slate-600">Conhecimento:</span>
          <p class="text-slate-900"><%= @quality_case.analise_conhecimento %></p>
        </div>
      <% end %>
      
      <% if @quality_case.analise_procedimental.present? %>
        <div>
          <span class="font-medium text-slate-600">Procedimental:</span>
          <p class="text-slate-900"><%= @quality_case.analise_procedimental %></p>
        </div>
      <% end %>
      
      <% if @quality_case.acoes_corretivas_propostas.present? %>
        <div>
          <span class="font-medium text-slate-600">Ações Propostas:</span>
          <p class="text-slate-900"><%= @quality_case.acoes_corretivas_propostas %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Opções da Qualidade -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Reanalisar -->
    <div class="bg-blue-50 border border-blue-200 rounded-md p-6">
      <h3 class="text-lg font-medium text-blue-800 mb-4">Reanalisar e Reenviar</h3>
      
      <%= form_with model: @quality_case, local: true, url: reanalisar_quality_case_path(@quality_case) do |form| %>
        <div class="mb-4">
          <%= form.label :informacoes_reanalise, "Informações da Reanálise (Obrigatório)", class: "block text-sm font-medium text-blue-700" %>
          <%= form.text_area :informacoes_reanalise, rows: 4, required: true,
                            placeholder: "Descreva as alterações e justificativas da reanálise...",
                            class: "mt-1 w-full border border-blue-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
        
        <%= form.submit "Reanalisar e Enviar para Gestão", 
                       class: "w-full px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" %>
      <% end %>
    </div>

    <!-- Manter Avaliação -->
    <div class="bg-orange-50 border border-orange-200 rounded-md p-6">
      <h3 class="text-lg font-medium text-orange-800 mb-4">Manter Avaliação</h3>
      
      <%= form_with model: @quality_case, local: true, url: manter_avaliacao_quality_case_path(@quality_case) do |form| %>
        <div class="mb-4">
          <%= form.label :motivo_manutencao, "Motivo da Manutenção (Obrigatório)", class: "block text-sm font-medium text-orange-700" %>
          <%= form.text_area :motivo_manutencao, rows: 4, required: true,
                            placeholder: "Justifique por que a avaliação deve ser mantida...",
                            class: "mt-1 w-full border border-orange-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm" %>
        </div>
        
        <%= form.submit "Manter Avaliação", 
                       class: "w-full px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-orange-600 hover:bg-orange-700" %>
      <% end %>
    </div>
  </div>
</div>
<div class="contact-entry border border-slate-200 rounded-md p-4 mb-4 bg-slate-50">
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-4">
    <div>
      <%= f.label :data_contato, "Data do Contato", class: "block text-sm font-medium text-slate-700" %>
      <%= f.date_field :data_contato, required: true,
                       class: "mt-1 block w-full border border-slate-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-amber-500 focus:border-amber-500 sm:text-sm" %>
    </div>
    
    <div>
      <%= f.label :hora_contato, "Hora do Contato", class: "block text-sm font-medium text-slate-700" %>
      <%= f.time_field :hora_contato, required: true,
                       class: "mt-1 block w-full border border-slate-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-amber-500 focus:border-amber-500 sm:text-sm" %>
    </div>
    
    <div>
      <%= f.label :contato_com, "Contato com", class: "block text-sm font-medium text-slate-700" %>
      <%= f.text_field :contato_com, required: true,
                       class: "mt-1 block w-full border border-slate-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-amber-500 focus:border-amber-500 sm:text-sm" %>
    </div>
  </div>
  
  <div>
    <%= f.label :registro_contato, "Registro do Contato (O que foi tratado)", class: "block text-sm font-medium text-slate-700" %>
    <%= f.text_area :registro_contato, rows: 3, required: true,
                    class: "mt-1 block w-full border border-slate-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-amber-500 focus:border-amber-500 sm:text-sm" %>
  </div>
  
  <div class="flex justify-end mt-3">
    <%= link_to "Remover Contato", "#", class: "remove-contact text-sm text-red-600 hover:text-red-800" %>
  </div>
</div>